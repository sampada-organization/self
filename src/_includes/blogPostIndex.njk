{%for post in postslist%}
    <div class="col-lg-6 col-md-6 mar-bt-50">
        <div class="single-blog-item">
            <div class="blog-bg">
                <img src="{{post.data.image}}" alt=""/>
                <div class="blog-content">
                    <p class="blog-meta">Posted by
                        <b>{{post.data.writer}}</b>
                        in
                        {{post.data.writtenOn}}</p>
                    <h5>
                        <a href="{{ post.url | url }}">{{post.data.title}}
                        </a>
                    </h5>
                    <p class="text-justify">{{post.data.description}}.</p>
                    <a href="{{ post.url | url }}" class="read-more">Read More</a>
                </div>
            </div>
        </div>
    </div>

    {%endfor%}